<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>SummaryRequired</fullName>
    <active>true</active>
    <description>Validation rule that makes summary required when creating an article with General Article record type</description>
    <errorConditionFormula>AND( RecordType.DeveloperName = &quot;GeneralArticle&quot; ,  ISBLANK( Summary ) )</errorConditionFormula>
    <errorMessage>Please fill Summary field</errorMessage>
</ValidationRule>
